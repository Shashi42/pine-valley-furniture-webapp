@model IEnumerable<S3G2_PVFAPP.Models.OrderLine>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/TableDisplayStyles.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderedQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderedQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Description)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { productID = item.ProductID, orderID = item.OrderID })" class="btn btn-dark">Edit</a>
            <a href="@Url.Action("Details", new { productID = item.ProductID, orderID = item.OrderID })" class="btn btn-primary">Details</a>
            <a href="@Url.Action("Delete", new { productID = item.ProductID, orderID = item.OrderID })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
