@model IEnumerable<S3G2_PVFAPP.Models.Product>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/TableDisplayStyles.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductFinish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productline.LineName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductFinish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productline.LineName)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-dark">Edit</a>
            <a href="@Url.Action("Details", new { id = item.ProductID })" class="btn btn-primary">Details</a>
            <a href="@Url.Action("Delete", new { id = item.ProductID })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
