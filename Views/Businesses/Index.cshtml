@model IEnumerable<S3G2_PVFAPP.Models.Business>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/TableDisplayStyles.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Territory.TerritoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Territory.TerritoryName)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { customerID = item.CustomerID, territoryID = item.TerritoryID })" class="btn btn-dark">Edit</a>
            <a href="@Url.Action("Details", new { customerID = item.CustomerID, territoryID = item.TerritoryID })" class="btn btn-primary">Details</a>
            <a href="@Url.Action("Delete", new { customerID = item.CustomerID, territoryID = item.TerritoryID })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
